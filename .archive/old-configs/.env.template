# PROVES Library - Environment Configuration Template
# Copy this to .env and fill in your actual credentials

# ============================================
# NEON DATABASE CONFIGURATION
# ============================================
# Get these from: https://console.neon.tech/
NEON_API_KEY=your_neon_api_key_here
NEON_PROJECT_ID=your_neon_project_id_here
NEON_DATABASE_URL=postgresql://[user]:[password]@[host]/[database]?sslmode=require

# Database connection details (parsed from DATABASE_URL or set individually)
PGHOST=your-project.neon.tech
PGPORT=5432
PGDATABASE=proves_library
PGUSER=your_username
PGPASSWORD=your_password

# ============================================
# LANGCHAIN MCP CONFIGURATION
# ============================================
LANGCHAIN_API_KEY=your_langchain_api_key_here
LANGCHAIN_PROJECT=proves-library
LANGCHAIN_TRACING_V2=true

# ============================================
# CLAUDE API (for agents)
# ============================================
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ============================================
# GITHUB API (for documentation sync)
# ============================================
# Get token at: https://github.com/settings/tokens
# Permissions needed: public_repo (read access)
GITHUB_TOKEN=ghp_your_github_token_here

# ============================================
# KNOWLEDGE GRAPH CONFIGURATION
# ============================================
# Neo4j (if using instead of Neon PostgreSQL + AGE)
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_neo4j_password

# ============================================
# APPLICATION SETTINGS
# ============================================
ENVIRONMENT=development
LOG_LEVEL=INFO
MCP_SERVER_PORT=3000
